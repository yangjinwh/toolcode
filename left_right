<!-- 数据在左右两个select中移动 -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <style type="text/css">
        select {
            width: 100px;
            height: 140px;
        }
        div {
            width: 130px;
            float: left;
            text-align: center;
        }
    </style>
    <script type="text/javascript" src="../js/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            // 第一个按钮【选中添加到右边】事件
            $("button:eq(0)").click(function () {
                $("select:eq(0) option:selected").appendTo($("select[name='sel02']"));
            });
            // 第二个按钮【全部添加到右边】事件
            $("button:eq(1)") .click(function () {
                $("select:eq(0) option").appendTo($("select[name='sel02']"));
            });
            // 第三个按钮【选中添加到左边】事件
            $("button:eq(2)").click(function () {
                $("select:eq(1) option:selected").appendTo($("select[name='sel01']"));
            });
            // 第四个按钮【全部添加到左边】事件
            $("button:eq(3)") .click(function () {
                $("select:eq(1) option").appendTo($("select[name='sel01']"));
            });
        });
    </script>
</head>
<body>
    <div id="left">
        <select multiple="multiple" name="sel01">
            <option value="opt01">选项1</option>
            <option value="opt02">选项2</option>
            <option value="opt03">选项3</option>
            <option value="opt04">选项4</option>
            <option value="opt05">选项5</option>
        </select>
        <button>选中添加到右边</button>
        <button>全部添加到右边</button>
    </div>
    <div id="right">
        <select multiple="multiple" name="sel02">
        </select>
        <button>选中添加到左边</button>
        <button>全部添加到左边</button>
    </div>
</body>
</html>
